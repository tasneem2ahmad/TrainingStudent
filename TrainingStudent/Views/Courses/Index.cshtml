@using Microsoft.AspNetCore.Authorization
@using Training.DAL.Entities;
@model IEnumerable<CourseViewModel>

<a href="/Courses/Create" class="btn btn-secondary" type="submit"> Add Course </a>
<br />
<br />

@if (Model.Count() == 0)
{
    <div class="bg-warning">
        <h1> No Courses yet</h1>
    </div>
}

else
{
    <form asp-action="Index">
        <div class="row">
            <div class="col-sm-8">
                <input placeholder="Search Name" name="SearchValue" class="form-control" />
            </div>
            <div class="col-sm-4">
                <input type="submit" value="Search" class=" btn btn-success" />
            </div>
        </div>
    </form>
    <br />
    <br />
    <table class="table d-lg-table-cell">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d => d.Id)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.DepartmentId)</th>
                <th>@Html.DisplayNameFor(d => d.Description)</th>
                <th>@Html.DisplayNameFor(d => d.Duration)</th>
                
                
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        @foreach (CourseViewModel item in Model)
        {
            <tbody>
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DepartmentId</td>
                    <td>@item.Description</td>
                    <td>@item.Duration</td>
                    <partial name="_ButtonsIndex" model="item.Id.ToString()"/>
                </tr>
            </tbody>
        }

    </table>


}
