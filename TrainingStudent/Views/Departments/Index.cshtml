
@using Training.DAL.Entities;
@model IEnumerable<Department>

<a href="/Departments/CreateNewDepartment" class="btn btn-secondary" type="submit"> Add Department </a>
<br />
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (Model.Count()==0)
{
    <div class="bg-warning">
        <h1> No Departments yet</h1>
    </div>
}

else{
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d=>d.Id)</th>
            <th>@Html.DisplayNameFor(d=>d.Name)</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    
                @foreach (Department item in Model)
                {
            <tbody>
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <partial name="_ButtonsIndex" model="item.Id.ToString()">
                </tr>
            </tbody>
                }
       
</table>

   
}