@using Training.DAL.Entities;
@model IEnumerable<TeacherViewModel>

<a href="/Teachers/Create" class="btn btn-secondary" type="submit"> Add Teacher </a>
<br />
<br />
<form asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input  type="submit" value="Search" class=" btn btn-success"/>
        </div>
    </div>
</form>
<br />

@if (Model.Count() == 0)
{
    <div class="bg-warning">
        <h1> No Teachers yet</h1>
    </div>
}

else
{
    <br />
    <table class="table d-lg-table-cell">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Id)</th>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.DepartmentId)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d=>d.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(d=>d.Salary)</th>
                <th>@Html.DisplayNameFor(d=>d.DateofBirth)</th>
                <th>@Html.DisplayNameFor(d=>d.HireDate)</th>
                <th>@Html.DisplayNameFor(d=>d.City)</th>
                <th>@Html.DisplayNameFor(d=>d.Image)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        @foreach (TeacherViewModel item in Model)
        {
            <tbody>
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.DepartmentId</td>
                    <td><a href="mailto:@item.Email">@item.Email</a></td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Salary</td>
                    <td>@item.DateofBirth</td>
                    <td>@item.HireDate</td>
                    <td>@item.City</td>
                    <td><img src="~/files//Imgs/@item.ImageName" class="img-fluid rounded" height="40" width="40" alt="TeacherName"/></td>
                    <partial name="_ButtonsIndex" model="item.Id.ToString()">
                </tr>
            </tbody>
        }

    </table>


}
