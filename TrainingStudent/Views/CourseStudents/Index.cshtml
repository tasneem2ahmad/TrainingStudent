@model IEnumerable<StudentWithCourseViewModel>

<a href="/CourseStudents/Create" class="btn btn-secondary" type="submit"> Add Course To Student </a>
<br />
<br />
<form asp-action="Index">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class=" btn btn-success" />
        </div>
    </div>
</form>
@{
    int i = 1;
}
<br />
@if (Model.Count() == 0)
{
    <div class="bg-warning">
        <h1> No Courses Added to Students yet</h1>
    </div>
}
else
{
    
    <br />
    <table class="table d-lg-table-cell">
        <thead>
            <tr>
                <th>ID</th>
                <th>StudentID</th>
                <th>CourseID</th>
                <th>StudentName</th>
                <th>PhoneNumber</th>
                <th>CourseName</th>
                <th>StudentDepartment</th>
                <th>YearOfSchool</th>
                <th>SchoolGrade</th>
                <th>MidDegree</th>
                <th>PracticalDegree</th>
                <th>FinalDegree</th>
                <th>CalculatedDegree</th>
                <th>MaxDegree</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>

        @foreach (StudentWithCourseViewModel item in Model)
        {
            <tbody>
                <tr>
                    <td>@i</td>
                    <td>@item.StudentId</td>
                    <td>@item.CourseId</td>
                    <td>@item.StudentName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.CourseName</td>
                    <td>@item.StudentDepartment</td>
                    <td>@item.YearOfSchool</td>
                    <td>@item.SchoolGrade</td>
                    <td>@item.MidDegree</td>
                    <td>@item.PracticalDegree</td>
                    <td>@item.FinalDegree</td>
                    <td>@(item.MidDegree + item.PracticalDegree + item.FinalDegree)</td>
                    <td>@item.MaxDegree</td>
                    <partial name="_ButtonsIndex" model="@item.ID.ToString()">
                </tr>
            </tbody>
        i++;
        }

    </table>


}
